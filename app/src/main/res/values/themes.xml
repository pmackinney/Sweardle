<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sweardle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">24sp</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertButton</item>
    </style>
    <style name="Theme.Tile" parent="Theme.Sweardle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/frame_white</item>
    </style>
    <style name="Theme.Keyboard" parent="Theme.Sweardle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:background">@drawable/frame_white</item>
    </style>
    <style name="Theme.AlertButton" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/frame_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="buttonBarButtonStyle">@style/OutlinedButton</item>
    </style>
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">24dp</item>
        <item name="strokeColor">@color/darkgrey</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
</resources>